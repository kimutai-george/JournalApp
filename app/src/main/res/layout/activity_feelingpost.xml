<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeelingpostActivity">

    <include
        android:id="@+id/postdataappbar"
        layout="@layout/appbarlayout"/>

    <ImageButton
        android:id="@+id/addfeelingimage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="100dp"
        app:srcCompat="@drawable/select_image"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/postdataappbar"/>

    <EditText
        android:id="@+id/txtwritefeeling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputstyle"
        android:hint="Write Something..."
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textMultiLine"
       app:layout_constraintTop_toBottomOf="@+id/addfeelingimage"
        />
<Button
    android:id="@+id/btnpostfeeling"
    android:text="Update Post"
    android:layout_marginTop="30dp"
    android:background="@drawable/btnstyle"
    android:textSize="16sp"
    android:textColor="@color/colorwhite"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/txtwritefeeling"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>